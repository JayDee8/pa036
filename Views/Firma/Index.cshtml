@model IEnumerable<bcpp.Models.firma>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model, canPage: false);
}

@grid.GetHtml(
    tableStyle: "table table-striped table-hover",
    columns:
    grid.Columns
    (
        grid.Column("adresa.mesto", "Město"),
        grid.Column("nazev", "Jméno"),
        grid.Column("ico", "IČO"),
        grid.Column("dic", "DIČ"),
        grid.Column(format: (item) => Html.ActionLink("Detaily", "Details", new { id = item.firma_id }))
    )
)
