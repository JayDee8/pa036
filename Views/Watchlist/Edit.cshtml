@model bcpp.Models.sledovane

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>sledovane</legend>

        @Html.HiddenFor(model => model.sledovane_id)

        <div class="editor-label">
            @Html.LabelFor(model => model.nazev)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nazev)
            @Html.ValidationMessageFor(model => model.nazev)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.uzivatel_id, "uzivatel")
        </div>
        <div class="editor-field">
            @Html.DropDownList("uzivatel_id", String.Empty)
            @Html.ValidationMessageFor(model => model.uzivatel_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.akcie_id, "akcie")
        </div>
        <div class="editor-field">
            @Html.DropDownList("akcie_id", String.Empty)
            @Html.ValidationMessageFor(model => model.akcie_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
