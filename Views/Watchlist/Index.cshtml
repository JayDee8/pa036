@model IEnumerable<bcpp.Models.sledovane>
@using bcpp.Helpers

@{
    ViewBag.Title = "Sledované akcie";
    WebGrid grid = new WebGrid(Model);
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Vytvořit novou", "Create")
</p>

@grid.GetHtml(
    tableStyle: "table table-striped table-hover",
    columns:
    grid.Columns
    (
        grid.Column("nazev", "Název"),
        grid.Column("jmeno", "Jméno"),
        grid.Column("nazev", "Název akcie")
    )
)
