@model bcpp.Models.portfolio

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

       @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
       {
            @Html.ValidationSummary(true)
       
       <div class="editor-label">
            @Html.LabelFor(model => model.uzivatel_id, "uzivatel")
        </div>
        <div class="editor-field">
            @if (User.IsInRole("admin"))
            {
                @Html.DropDownList("uzivatel_id", String.Empty)
            }
            else
            {
                @ViewBag.uzivatel_id
            }
            @Html.ValidationMessageFor(model => model.uzivatel_id)
        </div>
           
          
        @f.ControlGroup().DropDownList("akcie_id", String.Empty).Label().LabelText("Prodat") 
        @f.ControlGroup().TextBoxFor(m => m.pocet).Label().LabelText("Počet")
        @f.ControlGroup().CustomControls(Html.Bootstrap().SubmitButton().Text("Provést"))
        
      
      
       }


        

        <div class="editor-label">
            @Html.LabelFor(model => model.akcie_id, "akcie")
        </div>
        <div class="editor-field">
            @Html.DropDownList("akcie_id", String.Empty)
            @Html.ValidationMessageFor(model => model.akcie_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.pocet)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.pocet)
            @Html.ValidationMessageFor(model => model.pocet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.cena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cena)
            @Html.ValidationMessageFor(model => model.cena)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nakup)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nakup)
            @Html.ValidationMessageFor(model => model.nakup)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.datum_zmeny)
        </div>
        <div class="editor-field">
            @String.Format("{0:dd.MM.yyyy}", DateTime.Today)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

