@model bcpp.Models.historie_akcie

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>historie_akcie</legend>

        @Html.HiddenFor(model => model.historie_id)

        @Html.HiddenFor(model => model.datum)

        <div class="editor-label">
            @Html.LabelFor(model => model.akcie_id, "akcie")
        </div>
        <div class="editor-field">
            @Html.DropDownList("akcie_id", String.Empty)
            @Html.ValidationMessageFor(model => model.akcie_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.cena_prodej)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cena_prodej)
            @Html.ValidationMessageFor(model => model.cena_prodej)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.cena_nakup)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cena_nakup)
            @Html.ValidationMessageFor(model => model.cena_nakup)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
